<BundleInfo name="ChimeraX-RemoteBrowser"
	    version="0.1.1" package="chimerax.RemoteBrowser"
  	    minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>Chan Zuckerberg Institute for Advanced Biological imaging</Author>
  <Email>uermel@czii.org</Email>
  <URL>https://www.czii.org/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Browse and open remote files.</Synopsis>
  <Description>
    <p>Fetch tomograms and annotation from the cryoET data portal.</p>
    <p>See <a href="https://www.czii.org/">https://www.czii.org/</a> for more information.</p>
  </Description>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="General"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version="~=1.7"/>
    <Dependency name="sshfs"/>
    <Dependency name="s3fs"/>
    <Dependency name="qasync"/>
    <Dependency name="qt-async-threads"/>
    <Dependency name="fonticon-materialdesignicons7"/>
    <Dependency name="zarr"/>
    <Dependency name="aiobotocore"/>
  </Dependencies>

  <DataFiles>
    <DataFile>icons/*.gif</DataFile>
  </DataFiles>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 3 - Alpha</PythonClassifier>
    <PythonClassifier>License :: Freeware</PythonClassifier>

    <ChimeraXClassifier>ChimeraX :: Tool :: RemoteBrowser :: General ::
      Opens Browser</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>